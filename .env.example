# 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# ==================== 评分配置 ====================
# 最小评分阈值
SCORER_MIN_SCORE=60.0

# ==================== 过滤配置 ====================
# 通过过滤的最小评分
FILTER_MIN_SCORE=70.0
# 结构完整性检查
FILTER_CHECK_STRUCTURE_COMPLETE=true
# 分型确认检查
FILTER_CHECK_FRACTAL_CONFIRMATION=true
# 涨跌停限制百分比
FILTER_LIMIT_MOVE_PERCENT=2.0

# ==================== 数据库配置 ====================
# 数据库URL
# SQLite示例
DB_URL=sqlite:///./data/futures.db
# PostgreSQL示例
# DB_URL=postgresql://user:password@localhost:5432/futures
# MySQL示例
# DB_URL=mysql+pymysql://user:password@localhost:3306/futures

# 数据库连接池大小
DB_POOL_SIZE=5
# 是否打印SQL语句（开发模式）
DB_ECHO=false

# ==================== TDX配置 ====================
# TDX服务器列表（JSON格式）
TDX_SERVERS=[{"ip": "115.238.56.198", "port": 7709}, {"ip": "115.238.90.165", "port": 7709}]
# TDX连接池大小
TDX_POOL_SIZE=3
# TDX连接超时（秒）
TDX_TIMEOUT=10

# ==================== 天勤配置 ====================
# 天勤用户名
TQ_USERNAME=your_username
# 天勤密码
TQ_PASSWORD=your_password
# 天勤超时（秒）
TQ_TIMEOUT=10
# 天勤数据获取数量
TQ_COUNT=5000

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 是否记录到文件
LOG_FILE=true
# 日志文件路径
LOG_FILE_PATH=logs/app.log

# ==================== 应用配置 ====================
# 调试模式
DEBUG=false
# 运行环境: development, production
ENVIRONMENT=production
